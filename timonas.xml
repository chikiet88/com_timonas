<?xml version="1.0" encoding="UTF-8"?>
<extension type="component" version="4.0" method="upgrade" client="site">
	<name>Timonas</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate>08/2019</creationDate>
	<author>Timona Academy</author>
	<authorEmail>info@timona.edu.vn</authorEmail>
	<authorUrl>https://timona.edu.vn/</authorUrl>
	<copyright>Copyright (C) 2019 Timona Academy, All rights reserved.</copyright>
	<license>GNU/GPL Version 2 or later - http://www.gnu.org/licenses/gpl-2.0.html</license>
	<!--  The version string is recorded in the components table -->
	<version>1.0.0</version>
	<!-- The description is optional and defaults to the name -->
	<description>Timonas Component</description>
	<namespace>Timonas\Component\Timonas</namespace>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->

	<files folder="site">
		<folder>Controller</folder>
		<folder>Helper</folder>
		<folder>Model</folder>
		<folder>Service</folder>
		<folder>tmpl</folder>
		<folder>View</folder>
	</files>
	
	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_timonas.ini</language>
	</languages>
	
	<administration>
		<files folder="admin">
			<file>access.xml</file>
			<file>config.xml</file>
			<folder>Controller</folder>
			<folder>Extension</folder>
			<folder>forms</folder>
			<folder>Helper</folder>
			<folder>Model</folder>
			<folder>Service</folder>
			<folder>services</folder>
			<folder>sql</folder>
			<folder>Table</folder>
			<folder>tmpl</folder>
			<folder>View</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_timonas.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_timonas.sys.ini</language>
		</languages>
		<menu img="class:default" link="option=com_timonas">Mywalks</menu>
	</administration>
</extension>
